{
  "typography": {
    "fontFamily": {
      "display": {
        "$value": "'Bebas Neue', sans-serif",
        "$type": "fontFamily",
        "$description": "Display font for headings and game title. Import: https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap"
      },
      "ui": {
        "$value": "'Manrope', sans-serif",
        "$type": "fontFamily",
        "$description": "UI font for labels, buttons, HUD elements. Import: https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700&display=swap"
      },
      "monospace": {
        "$value": "'JetBrains Mono', monospace",
        "$type": "fontFamily",
        "$description": "Monospace font for scores and numbers. Import: https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap"
      }
    },
    "fontSize": {
      "display": {
        "sm": {
          "$value": "44px",
          "$type": "dimension",
          "$description": "Small display text"
        },
        "md": {
          "$value": "52px",
          "$type": "dimension",
          "$description": "Medium display text"
        },
        "lg": {
          "$value": "60px",
          "$type": "dimension",
          "$description": "Large display text (game title)"
        }
      },
      "ui": {
        "xs": {
          "$value": "12px",
          "$type": "dimension",
          "$description": "Extra small UI text (labels)"
        },
        "sm": {
          "$value": "14px",
          "$type": "dimension",
          "$description": "Small UI text"
        },
        "md": {
          "$value": "16px",
          "$type": "dimension",
          "$description": "Base UI text (body, buttons)"
        }
      },
      "monospace": {
        "sm": {
          "$value": "10px",
          "$type": "dimension",
          "$description": "Small monospace (compact scores)"
        },
        "md": {
          "$value": "12px",
          "$type": "dimension",
          "$description": "Base monospace (score displays)"
        }
      }
    },
    "fontWeight": {
      "regular": {
        "$value": "400",
        "$type": "fontWeight",
        "$description": "Regular weight"
      },
      "medium": {
        "$value": "500",
        "$type": "fontWeight",
        "$description": "Medium weight"
      },
      "bold": {
        "$value": "700",
        "$type": "fontWeight",
        "$description": "Bold weight"
      }
    },
    "lineHeight": {
      "tight": {
        "$value": "1.1",
        "$type": "lineHeight",
        "$description": "Tight line height for display text"
      },
      "normal": {
        "$value": "1.5",
        "$type": "lineHeight",
        "$description": "Normal line height for UI text"
      }
    }
  }
}
